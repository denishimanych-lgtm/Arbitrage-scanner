# Arbitrage Scanner Environment Configuration
# Copy this file to .env and fill in your values

# === REQUIRED ===

# Telegram Bot
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrSTUvwxYZ
TELEGRAM_CHAT_ID=123456789

# === RECOMMENDED (for contract fetching) ===

# CoinGecko API (Pro or Demo key)
# Get it at: https://www.coingecko.com/en/api
COINGECKO_API_KEY=

# CoinMarketCap API (fallback)
# Get it at: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=

# === OPTIONAL ===

# Redis (default: localhost)
REDIS_URL=redis://localhost:6379/0

# Environment
APP_ENV=development

# Alert Settings (can also be set via /threshold command)
MIN_SPREAD_PCT=2.0
MIN_LIQUIDITY_USD=500000
ALERT_COOLDOWN_SECONDS=300

# Position Settings
MAX_POSITION_USD=50000
SUGGESTED_POSITION_USD=10000

# Safety Settings
MAX_SLIPPAGE_PCT=2.0

# Logging
LOG_LEVEL=info
